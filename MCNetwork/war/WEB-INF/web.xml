<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>networkServlet</servlet-name>
    <servlet-class>com.TDDD27.MCNetwork.server.DatabaseServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>networkServlet</servlet-name>
    <url-pattern>/mcnetwork/database</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>loginService</servlet-name>
    <servlet-class>com.TDDD27.MCNetwork.server.LoginServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginService</servlet-name>
    <url-pattern>/mcnetwork/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>blobServlet</servlet-name>
    <servlet-class>com.TDDD27.MCNetwork.server.BlobServiceImpl</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>uploadServlet</servlet-name>
    <servlet-class>com.TDDD27.MCNetwork.server.UploadServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>blobServlet</servlet-name>
    <url-pattern>/mcnetwork/blobservice</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>uploadServlet</servlet-name>
    <url-pattern>/mcnetwork/uploadservice</url-pattern>
  </servlet-mapping>
  
  <!-- <precompilation-enabled>false</precompilation-enabled> -->
  
  
  <!-- FÃ¶r uppladdningen av bilder -->
  <context-param>
    <!-- max size of the upload request -->
    <param-name>maxSize</param-name>
    <param-value>3145728</param-value>
  </context-param>
  <context-param>
    <!-- Useful in development mode to slow down the uploads in fast networks.
         Put the number of milliseconds to sleep in each block received in the server.
         false or 0, means don't use slow uploads  -->
    <param-name>slowUploads</param-name>
    <param-value>200</param-value>
  </context-param>

 
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>MCNetwork.html</welcome-file>
  </welcome-file-list>

</web-app>
